@{
    ViewBag.Title = "Calculate Your Grade";
}

@model GradeCalculatorModel

<body>
    <h2>Grade Calculator</h2>
    <form method="post">
        <label>Assignments:</label>
        <input name="assignments" id="assignments" />
        <br />
        <label>Group Project:</label>
        <input name="groupproject" id="groupproject" />
        <br />
        <label>Quizzes:</label>
        <input name="quizzes" id="quizzes" />
        <br />
        <label>Exams:</label>
        <input name="exams" id="exams" />
        <br />
        <label>INTEX:</label>
        <input name="intex" id="intex" />
        <br />
        <div asp-validation-summary="All"></div>
        <input type="submit" value="calculate" id="submitbutton" />
    </form>
</body>